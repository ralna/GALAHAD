{{\csname b@#2\endcsname\ (\csname bhy@#2\endcsname}%
\global\@namedef{b@#2}{\csname bha@#2\endcsname}}%
}}{#1}}
\def\@citeasnoun#1#2{{#1\if@tempswa , #2\fi)}}

