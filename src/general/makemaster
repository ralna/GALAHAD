	$(RANLIB) $(LGS)
linearsolver_double: $($(LINEARSOLVERD))
	$(RANLIB) $(LGD)
linearsolver_quadruple: $($(LINEARSOLVERQ))
	$(RANLIB) $(LGQ)
linearsolver_single_64: $($(LINEARSOLVERS))
	$(RANLIB) $(LGS64)
linearsolver_double_64: $($(LINEARSOLVERD))
	$(RANLIB) $(LGD64)
linearsolver_quadruple_64: $($(LINEARSOLVERQ))
	$(RANLIB) $(LGQ64)

