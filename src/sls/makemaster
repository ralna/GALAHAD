$(package)cs4.o: $(OBJ)/$(package)cs4_$(PRECIS).o

$(OBJ)/$(package)cs4_$(PRECIS).o: ../$(package)/C/$(package)s4.c
	@printf ' %-9s %-15s\t\t' "Compiling" "$(package)cs4  "
