           ../$(package)/C/$(package)s2.c > $(OBJ)/$(package)cs2.c
	cd $(OBJ) ; $(CC) -o $(package)cs2_$(PRECIS).o $(CFLAGS) \
                      $(package)cs2.c -I $(GALAHAD)/include -I $(OBJ)
	rm $(OBJ)/*.c
	@printf '[ OK ]\n'

