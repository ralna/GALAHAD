	$(RANLIB) $(HLG)
	@printf '[ OK ]\n'

# run spec-sheet example tests

hsl_mi35ds: $(MI35D)
	cd $(MI35) ; $(FORTRAN) $(RUNFFLAGSOMP) $(SPECIAL) \
           -o run_hsl_mi35 hsl_mi35ds.f90 -L$(OBJD) $(LIBS)
	- $(HSL_MI35)/run_hsl_mi35 < $(HSL_MI35)/hsl_mi35ds.data
	rm $(MI35)/run_hsl_mi35
