mc64s.o: $(HLG)(mc64s.o)

$(HLG)(mc64s.o): $(MA97)/mc64s.f
	@printf ' %-9s %-15s\t\t' "Compiling" "mc64s"
	$(CP) $(MA97)/mc64s.f $(OBJ)/mc64s.f90
