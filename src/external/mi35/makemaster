	$(MVMODS)
	$(RANLIB) $(HLG)
	@printf '[ OK ]\n'

hsl_mc69d.o: $(HLG)(hsl_mc69d.o)

$(HLG)(hsl_mc69d.o): $(MA97)/hsl_mc69d.f90
	@printf ' %-9s %-15s\t\t' "Compiling" "hsl_mc69d"
	$(CP) $(MA97)/hsl_mc69d.f90 $(OBJ)/hsl_mc69d.f90
	cd $(OBJ) ; $(FORTRAN) -o hsl_mc69d.o $(FFLAGSOMP) hsl_mc69d.f90
