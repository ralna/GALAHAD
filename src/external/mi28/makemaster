hsl_mc64s.o: $(HLG)(hsl_mc64s.o)

$(HLG)(hsl_mc64s.o): $(MC64)/hsl_mc64s.f90
	@printf ' %-9s %-15s\t\t' "Compiling" "hsl_mc64s"
