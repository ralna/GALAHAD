	$(CP) $(MI28)/mc61s.f $(OBJ)/mc61s.f90
	cd $(OBJ); $(FORTRAN) -o mc61s.o $(FFLAGS77) mc61s.f90
	cd $(OBJ); $(HARR) mc61s.o ; $(RM) mc61s.f90 mc61s.o
	@printf '[ OK ]\n'

