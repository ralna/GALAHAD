	cd $(OBJ) ; $(FORTRAN) -o hsl_ma57s.o $(FFLAGS) hsl_ma57s.f90
	cd $(OBJ) ; $(HARR) hsl_ma57s.o ; $(RM) hsl_ma57s.f90 hsl_ma57s.o
	$(RMARFILE) mdchl.o
	$(RMARFILE) lancelot_types.o
	$(RMARFILE) qpd.o
	$(RMARFILE) ir.o
	$(RMARFILE) sls.o
	$(RMARFILE) sbls.o
	$(RMARFILE) psls.o
	$(RMARFILE) superb.o
	$(MVMODS)
	$(RANLIB) $(HLG)
	@printf '[ OK ]\n'

