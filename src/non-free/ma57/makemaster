hsl_ma57s.o: $(HLG)(hsl_ma57s.o)

$(HLG)(hsl_ma57s.o): $(MA57)/hsl_ma57s.f90
	@printf ' %-9s %-15s\t\t' "Compiling" "hsl_ma57s"
