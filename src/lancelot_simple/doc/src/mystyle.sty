%        begin and end proof
%        syntax: \bpr ... \epr

\newcommand{\bpr}{{\bf Proof.} \hspace{1.5mm}}
\newcommand{\epr}{\hfill $\Box$ \vspace*{1em}}

\newcommand{\proof}[1]{
\begin{list}{}{
